<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }
        
        li {
            float: left;
            font-size: large;
        }
        
        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        
        li a:hover {
            background-color: #111;
        }
        
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            width: 23%;
            display: inline-block;
            margin: 1%;
            background-color: white;
        }
        
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }
        
        .container {
            padding: 2px 16px;
        }
        
        #demo {
            background-image: url(bg_img.jpg);
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            background-size: cover;
            min-height: 570px;
        }
        
        button {
            width: 100%;
            background-color: black;
            color: white;
            padding-top: 5px;
            padding: 5px
        }
        
        button:hover[enabled] {
            background-color: green;
        }
        
        button[disabled] {
            background-color: #333;
        }
        
        #navbar {
            text-align: center;
            color: aliceblue;
            font-size: x-large;
            position: fixed;
            width: 100%;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            background-color: #333;
        }
    </style>
</head>

<body style="margin: 0;">
    <div id="navbar">
        <ul>
            <li><a class="active" href="http://localhost:3000/products">Products</a></li>
            <div style="padding-top: 15px;padding: 10px;">My Orders</div>
        </ul>
    </div>
    <br><br><br>
    <div>
        <div id="demo"></div>
    </div>
</body>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
    async function main() {
        var id = sessionStorage.getItem('id')
        var token = sessionStorage.getItem('token')
        let result = await fetch("/getOrder", {
            method: 'POST',
            headers: {
                "Content-type": "application/json",
                "Authorization": "Bearer " + token
            },
            body: JSON.stringify({
                id: id
            }),
        });
        console.log(id)
        let resData = await result.json();
        if (resData.status == 200) {
            let text = "";
            for (let i = 0; i < resData.data.result.data.length; i++) {
                var buttonStatus = "enabled"
                var buttonDisplay = "PAY"
                if (resData.data.result.data[i].payment_status == 'PAID') {
                    buttonStatus = "disabled"
                    buttonDisplay = "PAID"
                }
                text += '<span>' + '<div class="card">' + '<div class="container">' + "<h4><b>Total : Rs." +
                    resData.data.result.data[i].total + "</b></h4>" + "<p> From: " + resData.data.result.data[i].user.email +
                    "</p>" + "<p>  Product Name : " + resData.data.result.data[i].order_items[0].product.name + "</p>" + "<p> Quantity : " +
                    resData.data.result.data[i].order_items[0].quantity + "</p>" + '<p> Status : ' + resData.data.result.data[i].status + '</p>' + '<p>Payment Status : ' + resData.data.result.data[i].payment_status + '</p>' + '</div>' + `<button id="btn${i}" onclick="payment('${resData.data.result.data[i].total}','${resData.data.result.data[i].id}')"  ${buttonStatus}>` + buttonDisplay + "</button>" + '</div>' + '</span>'
            }
            document.getElementById("demo").innerHTML = text;
        } else {
            let text = '<img src="f.jpg" width=100% height=605px padding=2px>';
            document.getElementById("demo").innerHTML = text;
        }
    }

    async function payment(amount, id) {
        sessionStorage.setItem('orderId', id)
        let pay = await fetch("/payment", {
            method: "POST",
            headers: {
                "Content-type": "application/json"
            },
            body: JSON.stringify({
                amount: amount,
            })
        });
        let paymentData = await pay.json();

        var options = {
            "key": "rzp_test_VbmrXkTyG8HP49", // Enter the Key ID generated from the Dashboard
            "amount": amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
            "currency": "INR",
            "order_id": paymentData.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
            "handler": async function(response) {
                if (response.razorpay_payment_id) {
                    let id = sessionStorage.getItem('orderId')
                    let result = await fetch("/changePaymentStatus", {
                        method: 'PUT',
                        headers: {
                            "Content-type": "application/json"
                        },
                        body: JSON.stringify({
                            id: id
                        })
                    });
                    let resData = await result.json();
                    alert(resData.message);
                    main();
                } else {
                    alert("ERROR");
                }
            },

        };
        var rzp1 = new Razorpay(options);
        rzp1.open();
    }

    main();
</script>

</html>