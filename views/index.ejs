<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }
        
        li {
            float: left;
            font-size: large;
        }
        
        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        
        li a:hover {
            background-color: #111;
        }
        
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            width: 23%;
            display: inline-block;
            margin: 1%;
            background-color: white;
            border-radius: 10px;
        }
        
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }
        
        .container {
            padding: 2px 16px;
        }
        
        #demo {
            background-image: url(bg_img.jpg);
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            background-size: cover;
        }
        
        button {
            width: 100%;
            background-color: black;
            color: white;
            padding-top: 5px;
            padding: 5px;
            border: 3px solid white;
            border-radius: 10px;
            font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        }
        
        #navbar {
            text-align: center;
            color: aliceblue;
            font-size: x-large;
            position: fixed;
            width: 100%;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            background-color: #333;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body style="margin: 0;">
    <div id="navbar">
        <ul>
            <li><a class="active" href="http://localhost:3000/myOrders">My Orders</a></li>
            <li>
                <a class="active" href="http://localhost:3000/myCart">Cart <i class="fa fa-shopping-cart" style="font-size:24px"></i></a>
            </li>
            <div style="padding-top: 15px;padding: 10px;">Products</div>
        </ul>

    </div>
    <br><br><br>
    <div>
        <div id="demo"></div>
    </div>
</body>
<script>
    async function main() {
        var token = sessionStorage.getItem('token')
        let result = await fetch("/viewProduct", {
            method: 'GET',
            headers: {
                "Content-type": "application/json",
                "Authorization": "Bearer " + token
            },
        });
        let resData = await result.json();
        console.log(resData.data);

        if (resData.status == 200) {
            let text = "";
            for (let i = 0; i < resData.data.length; i++) {

                text += '<span>' + '<div class="card">' + '<div class="container">' + "<h4><b>" +
                    resData.data[i].name + "</b></h4>" + "<p> Price : Rs." + resData.data[i].price + "</p>" + "<p> Category : " + resData.data[i].product_category.category +
                    "</p>" + "<p> Stock : " + resData.data[i].product_inventory.stock + "</p>" + `<p>Quantity : <input type="number" id="quantity${i}" name="quantity${i}" value="1" min="1" max="5"></p>` + '</div>' +
                    `<button type="submit" id="btn${i}" onclick="addToCart('${resData.data[i].id}','${resData.data[i].name}','${resData.data[i].price}','${resData.data[i].product_category.category}','${i}')">` + 'Add Product to Cart' + "</button>" +
                    '</div>' + '</span>'
            }
            document.getElementById("demo").innerHTML = text;
        } else {
            let text = '<img src="f.jpg" width=100% height=605px padding=2px>';
            document.getElementById("demo").innerHTML = text;
        }
    }

    async function addToCart(id, name, price, category, ui) {
        var quantity = document.getElementById(`quantity${ui}`).value
        if (quantity > 5 || quantity < 1) {
            alert("Quantity should be less than 5 and more than 0")
            main()
        } else {
            sessionStorage.setItem(`id_${id}`, id)
            sessionStorage.setItem(`name_${id}`, name)
            sessionStorage.setItem(`price_${id}`, price)
            sessionStorage.setItem(`category_${id}`, category)
            sessionStorage.setItem(`quantity_${id}`, quantity)
        }
    }

    main();
</script>

</html>