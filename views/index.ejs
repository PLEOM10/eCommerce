<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            width: 23%;
            display: inline-block;
            margin: 1%;
            background-color: white;
        }
        
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }
        
        .container {
            padding: 2px 16px;
        }
        
        #demo {
            background-image: url(bg_img_product.jpg);
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            background-size: cover;
        }
        
        button {
            width: 100%;
            background-color: black;
            color: white;
            padding-top: 5px;
            padding: 5px
        }
        
        #navbar {
            text-align: center;
            color: aliceblue;
            font-size: x-large;
            margin: 0;
            position: fixed;
            width: 100%;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            padding: 10px;
            background-color: #333;
        }
    </style>
</head>

<body style="margin: 0;">
    <div id="navbar"> Products </div>
    <br><br><br>
    <div>
        <div id="demo"></div>
    </div>
</body>
<script>
    async function main() {
        var token = sessionStorage.getItem('token')
        let result = await fetch("/viewProduct", {
            method: 'GET',
            headers: {
                "Content-type": "application/json",
                "Authorization": "Bearer " + token
            },

        });
        let resData = await result.json();
        console.log(resData.data);

        if (resData.status == 200) {
            let text = "";
            for (let i = 0; i < resData.data.length; i++) {

                text += '<span>' + '<div class="card">' + '<div class="container">' + "<h4><b>" +
                    resData.data[i].name + "</b></h4>" + "<p> Price : Rs." + resData.data[i].price + "</p>" + "<p> Category : " + resData.data[i].product_category.category + "</p>" + "<p> Stock : " + resData.data[i].product_inventory.stock + "</p>" + '</div>' + `<button id="btn${i}" onclick="buyProduct('${resData.data[i].id}')">` + 'Buy Product' + "</button>" + '</div>' + '</span>'
            }
            document.getElementById("demo").innerHTML = text;
        } else {
            let text = '<img src="f.jpg" width=100% height=605px padding=2px>';
            document.getElementById("demo").innerHTML = text;
        }
    }

    async function buyProduct(id) {
        var token = sessionStorage.getItem('token')
        let result = await fetch("/orderProduct", {
            method: 'POST',
            headers: {
                "Content-type": "application/json",
                "Authorization": "Bearer " + token
            },
            body: JSON.stringify({
                product_id: id,
                quantity: 1
            })
        });
        let resData = await result.json();
        if (resData.status == 200) {
            alert(resData.message);
        }
    }

    main();
</script>

</html>